#leia 8 temperaturas em Celsius para uma array, converta os valores para F e exiba a media, o minimo e o maximo em ambas as escalas.





import numpy as np


celsius_array = np.zeros(8)

print("Digite 8 temperaturas em Celsius:")


for i in range(8):
    celsius_array[i] = float(input(f"Temperatura {i+1}:"))

f_array = (celsius_array * 9/5) + 32


print("Resultados em Celsius")

print(f"Minimo: {np.min(celsius_array): .2f}°C")
print(f"Maximo: {np.max(celsius_array): .2f}°C")
print(f"Media: {np.mean(celsius_array): .2f}°C")


print(f"Minimo: {np.min(f_array): .2f}°F")
print(f"Maximo: {np.max(f_array): .2f}°F")
print(f"Media: {np.mean(f_array): .2f}°F")


